<odoo>
    <!-- MRI Test Tree View -->
    <record id="view_mri_test_tree" model="ir.ui.view">
        <field name="name">mri.test.tree</field>
        <field name="model">mri.test</field>
        <field name="arch" type="xml">
            <tree>
                <field name="mri_test_sequence"/>
                <field name="card_id"/>
                <field name="patient_name"/>
                <field name="test_type"/>
                <field name="date"/>
                <field name="status"/>
            </tree>
        </field>
    </record>

    <record id="mri_test_sequence" model="ir.sequence">
        <field name="name">MRI Test Sequence</field>
        <field name="code">mri.test.sequence</field>
        <field name="prefix">MRI-</field>
        <field name="padding">5</field>
        <field name="company_id" eval="False"/>
    </record>
    
    <record id="view_mri_test_form" model="ir.ui.view">
        <field name="name">mri.test.form</field>
        <field name="model">mri.test</field>
        <field name="arch" type="xml">
            <form string="MRI Test">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="card_id"/>
                            <field name="patient_name" readonly="1"/>
                            <field name="date"/>
                        </group>
                        <group>
                            <field name="test_type"/>
                            <field name="status"/>
                            <field name="result"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- MRI Test Action -->
    <record id="action_mri_test" model="ir.actions.act_window">
        <field name="name">MRI Tests</field>
        <field name="res_model">mri.test</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click to create a new MRI Test.
            </p>
        </field>
    </record>

</odoo>
